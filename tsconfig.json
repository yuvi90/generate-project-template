{
  "compilerOptions": {
    "target": "es2016",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "@root/*": ["*"]
    },
    "strict": true,
    "sourceMap": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "noEmitOnError": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noUnusedLocals": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "templates"],
  "ts-node": { "esm": true }
}
